<% if flash[:notice] %>
  <p id="notice">
    <%= flash[:notice] %>
  </p>
<% else %>
<% end %>
<div class="container px-5 px-sm-0">
  <div class="row">
    <div class="col-md-3">
      <%= render 'books/list', book:@booknew, user:@book.user %>
    </div>

    <div class="col-md-8 offset-md-1">
      <h2>Book detail</h2>
      <table class="table">
        <tbody>
          <tr>
            <td>
              <%= link_to user_path(@book.user_id) do %>
                <%= attachment_image_tag @book.user, :profile_image, format: 'jpeg', fallback: "no_image.jpg", size:"40x40" %>
                <br>
                <%= @book.user.name %>
              <% end %>
            </td>
            <td>
              <%= link_to @book.title, book_path(@book.id) %>
            </td>
            <td>
              <%= @book.body %>
            </td>
            <% if @book.user_id == current_user.id %>
              <td>
                <%= link_to 'Edit', edit_book_path(@book.id), class:"btn btn-sm btn-success" %>
              </td>
              <td>
                <%= link_to 'Destroy', book_path(@book.id), method: :delete, class:"btn btn-sm btn-danger" %>
              </td>
            <% else %>
            <% end %>
          </tr>
        </tbody>
      </table>
    </div>

  </div>
</div>