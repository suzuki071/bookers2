<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h1>Editing Book</h1>  
      <%= form_with model:@book, local:true do |b| %>
        
        <div id="error_explanation">
          <% if @book.errors.any? %>
            <h3>
              <% if @book.errors.count == 1 %>
                <%= @book.errors.count %> error prohibited this obj from being saved:
              <% else %>
                <%= @book.errors.count %> errors prohibited this obj from being saved:
              <% end %>
            </h3>
            <ul>
              <% @book.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
            <% end %>
            </ul>
          <% end %>
        </div>
        
        <div class="form-group">
          <label for="book_title">Title</label>
          <%= b.text_field :title, class:"form-control book_title" %>
        </div>
        <div class="form-group">
          <label for="book_opinion">Opinion</label>
          <%= b.text_area :body, class:"form-control book_body" %>
        </div>
        <div class="form-group">
          <%= b.submit 'Update Book', class:"btn btn-success" %>
        </div>
      <% end %>
      <%= link_to "Show", book_path(@book) %>
       | 
      <%= link_to "Back", books_path %>
    </div>
  </div>
</div>