<div class="container">
  <div class="row">
    <div class="col-sm-12 col-md-8 col-lg-5 px-5 px-sm-0 mx-auto">
      <h2>User info</h2>
      <%= form_with model:@user, local:true do |u| %>
        
        <div id="error_explanation">
          <% if @user.errors.any? %>
            <h3>
              <% if @user.errors.count == 1 %>
                <%= @user.errors.count %> error prohibited this obj from being saved:
              <% else %>
                <%= @user.errors.count %> errors prohibited this obj from being saved:
              <% end %>
            </h3>
            <ul>
              <% @user.errors.full_messages.each do |message| %>
                <li>
                  <%= message %>
                </li>
            <% end %>
            </ul>
          <% end %>
        </div>
      
        <div class="form-group">
          <label for="user_name">Name</label>
          <%= u.text_field :name, class:"form-control name" %>
        </div>
        <div class="form-group">
          <label for="user_image">Image</label>
          <%= u.attachment_field:profile_image, placeholder:"プロフィール画像", class:"form-control-file user_image" %>
        </div>
        <div class="form-group">
          <label for="user_intriduction">Introduction</label>
          <%= u.text_area :introduction, class:"form-control introduction" %>
        </div>
        <div class="form-group">
          <%= u.submit 'Update User', class:"btn btn-secondary" %>
        </div>
      <% end %>
    </div>
  </div>
</div>